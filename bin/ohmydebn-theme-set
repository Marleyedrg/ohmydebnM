#!/bin/bash

# ohmydebn-theme-set: Set a theme, specified by its name.
# Usage: ohmydebn-theme-set <theme-name>

if [[ -z "$1" && "$1" != "CNCLD" ]]; then
  echo "Usage: ohmydebn-theme-set <theme-name>" >&2
  exit 1
fi

THEMES_DIR="$HOME/.config/ohmydebn/themes/"
CURRENT_THEME_DIR="$HOME/.config/ohmydebn/current/theme"

THEME_NAME=$(echo "$1" | sed -E 's/<[^>]+>//g' | tr '[:upper:]' '[:lower:]' | tr ' ' '-')
THEME_PATH="$THEMES_DIR/$THEME_NAME"

# Check if the theme entered exists
if [[ ! -d "$THEME_PATH" ]]; then
  echo "Theme '$THEME_NAME' does not exist in $THEMES_DIR" >&2
  exit 2
fi

# Update theme symlinks
ln -nsf "$THEME_PATH" "$CURRENT_THEME_DIR"

# Determine light or dark mode
if [ -f ~/.config/ohmydebn/current/theme/light.mode ]; then
  gsettings set org.x.apps.portal color-scheme "prefer-light"
else
  gsettings set org.x.apps.portal color-scheme "prefer-dark"
fi

# Define ROFI_DIR
ROFI_DIR=~/.config/rofi

# Define default themes for gtk, icon, cinnamon, and rofi
GTK_THEME="Catppuccin-Dark"
ICON_THEME="Mint-Y-Grey"
CINNAMON_THEME="Catppuccin-Dark"
ROFI_THEME="$ROFI_DIR/square-gray-dark.rasi"

# Override those settings for our default OhMyDebn/Omarchy themes
case $THEME_NAME in
ash)
  GTK_THEME="Mint-Y-Dark-Grey"
  ICON_THEME="Mint-Y-Grey"
  CINNAMON_THEME="Mint-Y-Dark-Grey"
  ROFI_THEME="$ROFI_DIR/square-gray-dark.rasi"
  ;;
catppuccin)
  GTK_THEME="Catppuccin-Dark"
  ICON_THEME="Catppuccin-Mocha"
  CINNAMON_THEME="Catppuccin-Dark"
  ROFI_THEME="$ROFI_DIR/catppuccin.rasi"
  ;;
catppuccin-latte)
  GTK_THEME="Catppuccin-Light"
  ICON_THEME="Catppuccin-Latte"
  CINNAMON_THEME="Catppuccin-Light"
  ROFI_THEME="$ROFI_DIR/square-pink-dark.rasi"
  ;;
everforest)
  GTK_THEME="Everforest-Dark"
  ICON_THEME="Everforest-Dark"
  CINNAMON_THEME="Everforest-Dark"
  ROFI_THEME="$ROFI_DIR/everforest.rasi"
  ;;
gruvbox)
  GTK_THEME="Gruvbox-Dark"
  ICON_THEME="gruvbox_dark"
  CINNAMON_THEME="Gruvbox-Dark"
  ROFI_THEME="$ROFI_DIR/gruvbox.rasi"
  ;;
kanagawa)
  GTK_THEME="Kanagawa-Dark"
  ICON_THEME="Kanagawa"
  CINNAMON_THEME="Kanagawa-Dark"
  ROFI_THEME="$ROFI_DIR/kanagawa.rasi"
  ;;
matte-black)
  GTK_THEME="Gruvbox-Yellow-Dark"
  ICON_THEME="Mint-Y-Sand"
  CINNAMON_THEME="Gruvbox-Yellow-Dark"
  ROFI_THEME="$ROFI_DIR/matte-black.rasi"
  ;;
nord)
  GTK_THEME="Catppuccin-Dark-Macchiato"
  ICON_THEME="Catppuccin-Macchiato"
  CINNAMON_THEME="Catppuccin-Dark-Macchiato"
  ROFI_THEME="$ROFI_DIR/square-nord-dark.rasi"
  ;;
ohmydebn)
  GTK_THEME="Catppuccin-Dark"
  ICON_THEME="Catppuccin-Mocha-Alt2"
  CINNAMON_THEME="Catppuccin-Dark"
  ROFI_THEME="$ROFI_DIR/square-blue-dark.rasi"
  ;;
osaka-jade)
  GTK_THEME="Osaka-Teal-Dark"
  ICON_THEME="Osaka_Dark"
  CINNAMON_THEME="Osaka-Teal-Dark"
  ROFI_THEME="$ROFI_DIR/osaka-jade.rasi"
  ;;
ristretto)
  GTK_THEME="Gruvbox-Dark"
  ICON_THEME="Mint-Y-Sand"
  CINNAMON_THEME="Gruvbox-Dark"
  ROFI_THEME="$ROFI_DIR/ristretto.rasi"
  ;;
rose-pine)
  GTK_THEME="Rosepine-Light"
  ICON_THEME="Rose-Pine"
  CINNAMON_THEME="Rosepine-Light"
  ROFI_THEME="$ROFI_DIR/square-pink-dark.rasi"
  ;;
tokyo-night)
  GTK_THEME="Tokyonight-Dark"
  ICON_THEME="Tokyonight-Dark"
  CINNAMON_THEME="Tokyonight-Dark"
  ROFI_THEME="$ROFI_DIR/tokyo-night.rasi"
  ;;
*)
  # If the user has installed extra themes, then check to see if the theme specifies an icon theme
  # If so, then use the the icon theme to pick an appropriate color palette
  if [[ -f ~/.config/ohmydebn/current/theme/icons.theme ]]; then
    ICON_THEME=$(cat ~/.config/ohmydebn/current/theme/icons.theme)
    case $ICON_THEME in
    Yaru-wartybrown)
      ROFI_THEME="$ROFI_DIR/square-gray-dark.rasi"
      if [ -f ~/.config/ohmydebn/current/theme/light.mode ]; then
        GTK_THEME="Gruvbox-Light"
        CINNAMON_THEME="Gruvbox-Light"
      else
        GTK_THEME="Gruvbox-Dark"
        CINNAMON_THEME="Gruvbox-Dark"
      fi
      ;;
    Yaru-red)
      ROFI_THEME="$ROFI_DIR/square-red-dark.rasi"
      if [ -f ~/.config/ohmydebn/current/theme/light.mode ]; then
        GTK_THEME="Rosepine-Light"
        CINNAMON_THEME="Rosepine-Light"
      else
        GTK_THEME="Rosepine-Dark"
        CINNAMON_THEME="Rosepine-Dark"
      fi
      ;;
    Yaru-blue)
      ROFI_THEME="$ROFI_DIR/square-blue-dark.rasi"
      if [ -f ~/.config/ohmydebn/current/theme/light.mode ]; then
        GTK_THEME="Catppuccin-Light"
        CINNAMON_THEME="Catppuccin-Light"
      else
        GTK_THEME="Catppuccin-Dark"
        CINNAMON_THEME="Catppuccin-Dark"
      fi
      ;;
    Yaru-sage | Yaru-olive | Yaru-prussiangreen)
      ROFI_THEME="$ROFI_DIR/square-green-dark.rasi"
      if [ -f ~/.config/ohmydebn/current/theme/light.mode ]; then
        GTK_THEME="Everforest-Light"
        CINNAMON_THEME="Everforest-Light"
      else
        GTK_THEME="Everforest-Dark"
        CINNAMON_THEME="Everforest-Dark"
      fi
      ;;
    Yaru-yellow)
      ICON_THEME="Mint-Y-Sand"
      ROFI_THEME="$ROFI_DIR/square-yellow-dark.rasi"
      if [ -f ~/.config/ohmydebn/current/theme/light.mode ]; then
        GTK_THEME="Gruvbox-Yellow-Light"
        CINNAMON_THEME="Gruvbox-Yellow-Light"
      else
        GTK_THEME="Gruvbox-Yellow-Dark"
        CINNAMON_THEME="Gruvbox-Yellow-Dark"
      fi
      ;;
    Yaru-magenta | Yaru-purple)
      ROFI_THEME="$ROFI_DIR/square-purple-dark.rasi"
      if [ -f ~/.config/ohmydebn/current/theme/light.mode ]; then
        GTK_THEME="Tokyonight-Light"
        CINNAMON_THEME="Tokyonight-Light"
      else
        GTK_THEME="Tokyonight-Dark"
        CINNAMON_THEME="Tokyonight-Dark"
      fi
      ;;
    esac
  fi
  ;;
esac

# If using an aether theme, then pull the colors from its wofi.css and convert them for rofi
WOFI_CSS=~/.config/ohmydebn/current/theme/wofi.css
if [[ -f $WOFI_CSS ]]; then
  BG=$(grep "@define-color bg" $WOFI_CSS | awk '{print $3}')
  FG=$(grep "@define-color fg" $WOFI_CSS | awk '{print $3}')
  GRAY1=$(grep "@define-color gray1" $WOFI_CSS | awk '{print $3}')
  GRAY2=$(grep "@define-color gray2" $WOFI_CSS | awk '{print $3}')
  GRAY3=$(grep "@define-color gray3" $WOFI_CSS | awk '{print $3}')
  GRAY4=$(grep "@define-color gray4" $WOFI_CSS | awk '{print $3}')
  GRAY5=$(grep "@define-color gray5" $WOFI_CSS | awk '{print $3}')
  FG_BRIGHT=$(grep "@define-color fg_bright" $WOFI_CSS | awk '{print $3}')
  AETHER_RASI=$ROFI_DIR/aether.rasi
  cp $ROFI_DIR/square-nord-dark.rasi $AETHER_RASI
  # bg0 - window background color
  sed -i "s|bg0:.*$|bg0:    $BG|" $AETHER_RASI
  # bg1 - inputbar background color
  sed -i "s|bg1:.*$|bg1:    $BG|" $AETHER_RASI
  # bg2 - message background color
  sed -i "s|bg2:.*$|bg2:    $BG|" $AETHER_RASI
  # bg3 - border color for window and inputbar
  sed -i "s|bg3:.*$|bg3:    $GRAY3|" $AETHER_RASI
  # fg0 - text color
  sed -i "s|fg0:.*$|fg0:    $FG|" $AETHER_RASI
  # fg1 - not used currently
  sed -i "s|fg1:.*$|fg1:    $FG|" $AETHER_RASI
  # fg2 - inputbar prompt color
  sed -i "s|fg2:.*$|fg2:    $GRAY1|" $AETHER_RASI
  # fg3 - inputbar placeholder color
  sed -i "s|fg3:.*$|fg3:    #3D3D3D;|" $AETHER_RASI
  ROFI_THEME="$AETHER_RASI"
fi

# use gsettings to update gtk theme, icon theme, and cinnamon theme
gsettings set org.cinnamon.desktop.interface gtk-theme "$GTK_THEME"
gsettings set org.cinnamon.desktop.interface icon-theme "$ICON_THEME"
gsettings set org.cinnamon.theme name "$CINNAMON_THEME"

# update rofi theme
mkdir -p $ROFI_DIR
ROFI_CONFIG=$ROFI_DIR/config.rasi
if [ -f $ROFI_CONFIG ]; then
  mv $ROFI_CONFIG $ROFI_CONFIG-backup-$(date +%Y%m%d-%H%M%S)
fi
cat <<EOF >$ROFI_CONFIG
@theme "$ROFI_THEME"
EOF

# Trigger alacritty config reload
ALACRITTY_CONFIG_DIR=~/.config/alacritty
mkdir -p $ALACRITTY_CONFIG_DIR
touch $ALACRITTY_CONFIG_DIR/alacritty.toml

# Restart components to apply new theme
pkill -SIGUSR2 btop

# Update starship prompt
STARSHIP_CONFIG=~/.config/starship.toml
if [ -f $STARSHIP_CONFIG ]; then
  mv $STARSHIP_CONFIG $STARSHIP_CONFIG-backup-$(date +%Y%m%d-%H%M%S)
fi
if [ "$1" == "Ohmydebn" ]; then
  cp ~/.local/share/ohmydebn/config/starship.toml $STARSHIP_CONFIG
else
  cp ~/.local/share/omarchy/config/starship.toml $STARSHIP_CONFIG
fi

# Set new background
~/.local/share/ohmydebn/bin/ohmydebn-theme-bg-next

ohmydebn-theme-set-eza
ohmydebn-theme-set-vscode
