#!/bin/bash

# Get the default browser
DEFAULT_BROWSER=$(xdg-settings get default-web-browser)

# Check if the default browser is Firefox or Chromium
if [[ $DEFAULT_BROWSER == *"firefox"* ]]; then
    firefox --kiosk "$1"
elif [[ $DEFAULT_BROWSER == *"chromium"* ]] || [[ $DEFAULT_BROWSER == *"chrome"* ]]; then
    chromium --app="$1"
else
    # Fallback to xdg-open if browser is unsupported
    xdg-open "$1"
fi
