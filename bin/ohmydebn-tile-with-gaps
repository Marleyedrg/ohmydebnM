#!/bin/bash

case "$1" in
'left')
  /usr/bin/gdbus call --session --dest org.gTile.Control --object-path /org/gTile/Control --method org.gTile.Control.TileFocusedWindow 2 2 0 0 1 2
  ;;
'top-left')
  /usr/bin/gdbus call --session --dest org.gTile.Control --object-path /org/gTile/Control --method org.gTile.Control.TileFocusedWindow 2 2 0 0 1 1
  ;;
'top')
  /usr/bin/gdbus call --session --dest org.gTile.Control --object-path /org/gTile/Control --method org.gTile.Control.TileFocusedWindow 2 2 0 0 2 1
  ;;
'full')
  /usr/bin/gdbus call --session --dest org.gTile.Control --object-path /org/gTile/Control --method org.gTile.Control.TileFocusedWindow 2 2 0 0 2 2
  ;;
'bottom')
  /usr/bin/gdbus call --session --dest org.gTile.Control --object-path /org/gTile/Control --method org.gTile.Control.TileFocusedWindow 2 2 0 1 2 1
  ;;
'right')
  /usr/bin/gdbus call --session --dest org.gTile.Control --object-path /org/gTile/Control --method org.gTile.Control.TileFocusedWindow 2 2 1 0 1 2
  ;;
'top-right')
  /usr/bin/gdbus call --session --dest org.gTile.Control --object-path /org/gTile/Control --method org.gTile.Control.TileFocusedWindow 2 2 1 0 1 1
  ;;
'bottom-left')
  /usr/bin/gdbus call --session --dest org.gTile.Control --object-path /org/gTile/Control --method org.gTile.Control.TileFocusedWindow 2 2 0 1 1 1
  ;;
'bottom-right')
  /usr/bin/gdbus call --session --dest org.gTile.Control --object-path /org/gTile/Control --method org.gTile.Control.TileFocusedWindow 2 2 1 1 1 1
  ;;
*)
  echo "Usage: $0 {left|right|top|bot|top-right|top-left|bottom-right|bottom-left}"
  exit 1
  ;;
esac
