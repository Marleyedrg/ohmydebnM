#!/bin/bash

case "$1" in
'left')
  FIRST="a"
  SECOND="c"
  ;;
'top-left')
  FIRST="a"
  SECOND="a"
  ;;
'top')
  FIRST="a"
  SECOND="b"
  ;;
'full')
  FIRST="a"
  SECOND="d"
  ;;
'bottom')
  FIRST="c"
  SECOND="d"
  ;;
'right')
  FIRST="b"
  SECOND="d"
  ;;
'top-right')
  FIRST="b"
  SECOND="b"
  ;;
'bottom-left')
  FIRST="c"
  SECOND="c"
  ;;
'bottom-right')
  FIRST="d"
  SECOND="d"
  ;;
*)
  echo "Usage: $0 {left|right|top|bot|top-right|top-left|bottom-right|bottom-left}"
  exit 1
  ;;
esac

XDOTOOL=/usr/bin/xdotool
$XDOTOOL key ctrl+shift+g
sleep 0.1s
$XDOTOOL key 1
$XDOTOOL key $FIRST
$XDOTOOL key $SECOND
